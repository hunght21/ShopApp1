<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="8dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="4dp"
    android:layout_width="140dp"
    android:layout_height="209dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="140dp"
        android:layout_height="209dp"
        android:background="@drawable/shading_item_sp">

        <ImageView
            android:id="@+id/all_itemsp_image"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/surface_laptop_go_128gb_5421_w1500"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
        <ImageView
            android:id="@+id/all_imageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="top|right"
            android:src="@drawable/icon_new_w512"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/all_new_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Macbook Air 13 2020 - M1 256GB - Chính hãng Apple Việt Nam"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/all_itemsp_image"
            tools:layout_editor_absoluteY="161dp" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/all_new_product_name"
            app:layout_constraintStart_toStartOf="@id/all_new_product_name"
            app:layout_constraintTop_toBottomOf="@id/all_new_product_name">

            <TextView
                android:id="@+id/all_item_vnd"
                app:layout_constraintHorizontal_bias="0.1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giá : "
                android:textColor="#F44336"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/all_itemsp_gia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15.000.000đ"
                android:textColor="#F44336"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/all_item_vnd"
                app:layout_constraintStart_toEndOf="@id/all_item_vnd"
                app:layout_constraintTop_toTopOf="@id/all_item_vnd"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

